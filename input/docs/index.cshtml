---
Title: Documentation
---

<div class="alert alert-info">
    <p>
        We gladly accept your contributions. If there is something that you would like to add then you can edit the content directly on GitHub.
    </p>
</div>

@foreach(IDocument child in Model.GetDocumentList(Keys.Children).OrderBy(x => x.Get<int>(Keys.Order, 1000)))
{
    <h1>@(child.GetString(Keys.Title))</h1>
    if(child.ContainsKey(SamsonKeys.Description))
    {
        <p>@Html.Raw(child.GetString(SamsonKeys.Description))</p>
    }

    @Html.Partial("_ChildPages", child)
}
